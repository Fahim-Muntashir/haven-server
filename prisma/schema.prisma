generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String     @id @default(uuid())
  email              String     @unique
  password           String
  role               UserRole
  needPasswordChange Boolean
  status             UserStatus
  created_at         DateTime   @default(now())
  updated_at         DateTime   @updatedAt
  admin              Admin?

  @@map("users")
}

model Admin {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  profilePhoto  String?
  contactNumber String
  isDeleted     Boolean
  created_at    DateTime @default(now())
  updatedAt     DateTime @updatedAt()
  user          User     @relation(fields: [email], references: [email])
  userId        String

  @@map("admins")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  AGENT
  BUYER
}

enum UserStatus {
  ACTIVE
  BLOCKED
  PENDING
}
